{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Watcher",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/stl-verify/cmd/watcher/main.go",
      "envFile": [
        "${workspaceFolder}/stl-verify/cmd/watcher/.env"
      ]
    },
    {
      "name": "Price Fetcher - Historical 1 Year",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/stl-verify/cmd/price-fetcher/main.go",
      "args": [
        "-from", "2025-02-04",
        "-to", "2026-02-03"
      ],
      "envFile": [
        "${workspaceFolder}/stl-verify/cmd/price-fetcher/.env"
      ]
    },
    {
      "name": "Price Fetcher - Current Prices",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/stl-verify/cmd/price-fetcher/main.go",
      "envFile": [
        "${workspaceFolder}/stl-verify/cmd/price-fetcher/.env"
      ]
    },
    {
      "name": "Oracle Price Worker",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/stl-verify/cmd/oracle-price-worker/main.go",
      "envFile": [
        "${workspaceFolder}/stl-verify/cmd/oracle-price-worker/.env"
      ]
    },
    {
      "name": "Oracle Backfill - SparkLend Genesis to Present",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/stl-verify/cmd/oracle-backfill/main.go",
      "args": [
        "--rpc-url", "http://erigon:8545",
        "--from", "16664447",
        "--to", "21800000",
        "--concurrency", "100"
      ],
      "envFile": [
        "${workspaceFolder}/stl-verify/cmd/oracle-backfill/.env"
      ]
    },
    {
      "name": "Oracle Backfill - Small Test Range",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/stl-verify/cmd/oracle-backfill/main.go",
      "args": [
        "--rpc-url", "http://erigon:8545",
        "--from", "21800000",
        "--to", "21800100",
        "--concurrency", "10"
      ],
      "envFile": [
        "${workspaceFolder}/stl-verify/cmd/oracle-backfill/.env"
      ]
    },
    {
      "name": "Data Validator - Full (requires tunnel)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/stl-verify/cmd/data-validator/main.go",
      "args": [
        "--spot-checks", "10"
      ],
      "envFile": [
        "${workspaceFolder}/stl-verify/cmd/data-validator/.env"
      ]
    },
    {
      "name": "Data Validator - Chain Integrity Only (requires tunnel)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/stl-verify/cmd/data-validator/main.go",
      "args": [
        "--skip-reorgs",
        "--spot-checks", "0"
      ],
      "envFile": [
        "${workspaceFolder}/stl-verify/cmd/data-validator/.env"
      ]
    }
  ]
}
