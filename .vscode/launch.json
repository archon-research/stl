        {
            "name": "Failed Tx Scanner: Heuristic Mode",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/stl-verify/experiments/failedTransactions",
            "args": [
                "-rpc=http://100.87.11.17:8545",
                "-start=17203646",
                "-end=0",
                "-db=failed_txs_heuristic.db",
                "-concurrency=500",
                "-checkpoint=1000",
                "-skip-revert-reason",
                "-batch-size=50"
